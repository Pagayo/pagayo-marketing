<style>
	.page-container {
		padding: var(--page-padding-desktop);
	}

	@media (max-width: 768px) {
		.page-container {
			padding: var(--page-padding-mobile);
		}
	}

	/* Hero Section */
	.hero-main {
		max-width: 1200px;
		margin: 0 auto 5rem;
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 3rem;
		align-items: center;
	}

	.hero__content {
		display: flex;
		flex-direction: column;
		gap: 1.25rem;
	}

	.eyebrow {
		display: inline-flex;
		align-items: center;
		gap: 0.4rem;
		padding: 0.35rem 0.8rem;
		border: 1px solid var(--border, #e3e8ee);
		border-radius: 999px;
		font-size: 0.85rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--color-medium-gray);
		background: var(--color-light-gray);
	}

	h1 {
		font-size: clamp(2.5rem, 5vw, 3.5rem);
		font-weight: 800;
		line-height: 1.1;
		color: var(--color-dark-blue);
		margin: 0;
	}

	.lead {
		font-size: clamp(1.125rem, 2vw, 1.25rem);
		line-height: 1.6;
		color: var(--color-medium-gray);
		max-width: 720px;
	}

	.hero__actions {
		display: flex;
		gap: 1rem;
		flex-wrap: wrap;
	}

	.btn {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		gap: 0.6rem;
		padding: 0.9rem 1.5rem;
		font-size: 1rem;
		font-weight: 700;
		border-radius: 10px;
		text-decoration: none;
		transition: all 0.25s ease;
		border: 1px solid transparent;
		cursor: pointer;
	}

	.btn-primary {
		background: var(--color-primary-purple);
		color: #ffffff;
		box-shadow: 0 10px 24px rgba(99, 91, 255, 0.25);
	}

	.btn-primary:hover {
		background: #574fee;
		transform: translateY(-2px);
		box-shadow: 0 14px 32px rgba(99, 91, 255, 0.3);
	}

	.btn-ghost {
		background: transparent;
		color: var(--color-primary-purple);
		border: 1px solid var(--color-primary-purple);
	}

	.btn-ghost:hover {
		background: var(--color-light-gray);
		color: var(--color-dark-blue);
	}

	.hero__meta {
		display: flex;
		gap: 0.75rem;
		flex-wrap: wrap;
	}

	.pill {
		display: inline-flex;
		align-items: center;
		gap: 0.35rem;
		padding: 0.4rem 0.85rem;
		background: var(--color-light-gray);
		border: 1px solid var(--border, #e3e8ee);
		border-radius: 999px;
		font-size: 0.85rem;
		color: var(--color-dark-blue);
	}

	.hero__panel {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 1rem;
	}

	.stat-card {
		background: #ffffff;
		padding: 1.6rem;
		border-radius: 14px;
		border: 1px solid #e3e8ee;
		box-shadow: 0 8px 24px rgba(10, 37, 64, 0.06);
	}

	.stat-label {
		font-size: 0.875rem;
		color: var(--color-medium-gray);
		margin-bottom: 0.5rem;
	}

	.stat-value {
		font-size: 2rem;
		font-weight: 800;
		color: var(--color-dark-blue);
		margin-bottom: 0.5rem;
	}

	.stat-footnote {
		font-size: 0.875rem;
		color: var(--color-medium-gray);
		line-height: 1.4;
	}

	@media (max-width: 1024px) {
		.hero-main {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 768px) {
		.hero__actions {
			flex-direction: column;
		}

		.btn {
			text-align: center;
			width: 100%;
		}
	}

