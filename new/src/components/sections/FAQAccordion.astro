---
/**
 * FAQAccordion Component - Pagayo Design System
 */

import Icon from '../ui/Icon.astro';

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
  title?: string;
  subtitle?: string;
  variant?: 'default' | 'bordered' | 'minimal';
  allowMultiple?: boolean;
  class?: string;
}

const {
  items,
  title,
  subtitle,
  variant = 'default',
  allowMultiple = false,
  class: className = '',
} = Astro.props;
---

<section class:list={['faq-section', className]}>
  {(title || subtitle) && (
    <div class="faq-header">
      {title && <h2 class="faq-title">{title}</h2>}
      {subtitle && <p class="faq-subtitle">{subtitle}</p>}
    </div>
  )}

  <div 
    class:list={['faq-accordion', `faq-${variant}`]}
    data-allow-multiple={allowMultiple}
  >
    {items.map((item, index) => (
      <div class="faq-item" data-index={index}>
        <button 
          class="faq-trigger"
          aria-expanded="false"
          aria-controls={`faq-content-${index}`}
          id={`faq-trigger-${index}`}
        >
          <span class="faq-question">{item.question}</span>
          <span class="faq-icon">
            <Icon name="chevron-down" size={20} />
          </span>
        </button>
        <div 
          class="faq-content"
          id={`faq-content-${index}`}
          role="region"
          aria-labelledby={`faq-trigger-${index}`}
          hidden
        >
          <div class="faq-answer">
            <p>{item.answer}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  /* Section */
  .faq-section {
    padding: var(--space-20) var(--space-4);
  }

  @media (min-width: 768px) {
    .faq-section {
      padding: var(--space-24) var(--space-8);
    }
  }

  /* Header */
  .faq-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-12);
  }

  .faq-title {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .faq-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
  }

  /* Accordion Container */
  .faq-accordion {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  /* FAQ Item */
  .faq-item {
    border-bottom: 1px solid var(--color-border);
  }

  .faq-item:first-child {
    border-top: 1px solid var(--color-border);
  }

  /* Bordered Variant */
  .faq-bordered .faq-item {
    margin-bottom: var(--space-3);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .faq-bordered .faq-item:first-child {
    border-top: 1px solid var(--color-border);
  }

  .faq-bordered .faq-item[data-open="true"] {
    border-color: var(--color-accent);
    box-shadow: 0 0 0 1px var(--color-accent);
  }

  /* Minimal Variant */
  .faq-minimal .faq-item {
    border: none;
  }

  .faq-minimal .faq-item:first-child {
    border-top: none;
  }

  .faq-minimal .faq-trigger {
    padding-left: 0;
    padding-right: 0;
  }

  /* Trigger Button */
  .faq-trigger {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    padding: var(--space-5) var(--space-4);
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background var(--transition-fast);
  }

  .faq-trigger:hover {
    background: var(--color-bg-secondary);
  }

  .faq-trigger:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: -2px;
  }

  .faq-bordered .faq-trigger {
    padding: var(--space-4) var(--space-5);
  }

  .faq-minimal .faq-trigger:hover {
    background: transparent;
  }

  .faq-question {
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.5;
  }

  .faq-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-text-muted);
    transition: transform var(--transition-base);
  }

  .faq-item[data-open="true"] .faq-icon {
    transform: rotate(180deg);
  }

  /* Content */
  .faq-content {
    overflow: hidden;
    transition: max-height var(--transition-slow);
  }

  .faq-content[hidden] {
    display: block;
    max-height: 0;
  }

  .faq-content:not([hidden]) {
    max-height: 500px;
  }

  .faq-answer {
    padding: 0 var(--space-4) var(--space-5);
  }

  .faq-bordered .faq-answer {
    padding: 0 var(--space-5) var(--space-5);
  }

  .faq-answer p {
    font-size: var(--text-base);
    color: var(--color-text-muted);
    line-height: 1.7;
  }
</style>

<script>
  const accordions = document.querySelectorAll('.faq-accordion');

  accordions.forEach((accordion) => {
    const allowMultiple = accordion.getAttribute('data-allow-multiple') === 'true';
    const items = accordion.querySelectorAll('.faq-item');

    items.forEach((item) => {
      const trigger = item.querySelector('.faq-trigger');
      const content = item.querySelector('.faq-content');

      trigger?.addEventListener('click', () => {
        const isOpen = item.getAttribute('data-open') === 'true';

        if (!allowMultiple) {
          items.forEach((otherItem) => {
            if (otherItem !== item) {
              otherItem.setAttribute('data-open', 'false');
              otherItem.querySelector('.faq-trigger')?.setAttribute('aria-expanded', 'false');
              otherItem.querySelector('.faq-content')?.setAttribute('hidden', '');
            }
          });
        }

        item.setAttribute('data-open', isOpen ? 'false' : 'true');
        trigger.setAttribute('aria-expanded', isOpen ? 'false' : 'true');
        
        if (isOpen) {
          content?.setAttribute('hidden', '');
        } else {
          content?.removeAttribute('hidden');
        }
      });
    });
  });
</script>
