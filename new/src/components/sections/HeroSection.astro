---
/**
 * HeroSection Component - Pagayo Design System
 * EXACT replica of original hero layout with 2-column grid
 * Left: eyebrow, h1, lead, buttons, pills, API card
 * Right: 3 stat cards in panel
 */

interface HeroCard {
  title: string;
  subtitle?: string;
  value?: string;
  description: string;
  link?: {
    text: string;
    href: string;
  };
}

interface HeroData {
  badge?: string;
  headline: string;
  headlineAccent: string;
  subtitle: string;
  primaryCta: {
    text: string;
    url: string;
  };
  secondaryCta?: {
    text: string;
    url: string;
  };
  pills?: string[];
  cards?: HeroCard[];
}

interface Props {
  data: HeroData;
  class?: string;
}

const {
  data,
  class: className = '',
} = Astro.props;

// Split cards: last card for left column (API card), first 3 for right panel
const apiCard = data.cards?.[data.cards.length - 1]; // API card (last one)
const panelCards = data.cards?.slice(0, 3) || []; // First 3 cards
---

<section class:list={['hero-main', className]}>
  <!-- Left Column: Content -->
  <div class="hero__content">
    {data.badge && (
      <p class="eyebrow">{data.badge}</p>
    )}
    
    <h1>
      {data.headline} <span class="accent">{data.headlineAccent}</span>
    </h1>
    
    <p class="lead">{data.subtitle}</p>
    
    <div class="hero__actions">
      <a class="btn btn-primary" href={data.primaryCta.url}>
        {data.primaryCta.text}
      </a>
      {data.secondaryCta && (
        <a class="btn btn-ghost" href={data.secondaryCta.url}>
          {data.secondaryCta.text}
        </a>
      )}
    </div>
    
    {data.pills && data.pills.length > 0 && (
      <div class="hero__meta">
        {data.pills.map((pill) => (
          <span class="pill">{pill}</span>
        ))}
      </div>
    )}

    {apiCard && (
      <div class="stat-card">
        <p class="stat-label">{apiCard.title}</p>
        <p class="stat-value">{apiCard.subtitle || apiCard.value}</p>
        <p class="stat-footnote">{apiCard.description}</p>
        {apiCard.link && (
          <a href={apiCard.link.href} class="stat-link">{apiCard.link.text} →</a>
        )}
      </div>
    )}
  </div>

  <!-- Right Column: Panel with 3 Cards -->
  {panelCards.length > 0 && (
    <div class="hero__panel">
      {panelCards.map((card) => (
        <div class="stat-card">
          <p class="stat-label">{card.title}</p>
          <p class="stat-value">{card.subtitle || card.value}</p>
          <p class="stat-footnote">{card.description}</p>
          {card.link && (
            <a href={card.link.href} class="stat-link">{card.link.text} →</a>
          )}
        </div>
      ))}
    </div>
  )}
</section>

<style>
  /* Hero Main - EXACT original layout */
  .hero-main {
    position: relative;
    max-width: 1200px;
    margin: 0 auto;
    padding: 3.5rem;
    border: 1px solid var(--border);
    border-radius: 22px;
    display: grid;
    grid-template-columns: minmax(0, 1.1fr) minmax(0, 0.9fr);
    gap: 2rem;
    background: 
      radial-gradient(circle at 20% 20%, rgba(0, 255, 136, 0.12), transparent 35%), 
      radial-gradient(circle at 80% 10%, rgba(0, 255, 136, 0.08), transparent 38%), 
      linear-gradient(180deg, rgba(15, 21, 19, 0.95) 0%, rgba(10, 10, 10, 0.95) 100%);
    overflow: hidden;
    box-shadow: 0 18px 60px rgba(0, 0, 0, 0.35);
  }

  @media (max-width: 1024px) {
    .hero-main {
      grid-template-columns: 1fr;
      padding: 2rem;
    }
  }

  /* Left Content Column */
  .hero__content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .eyebrow {
    display: inline-block;
    padding: 0.35rem 0.9rem;
    border-radius: 999px;
    background: rgba(0, 255, 136, 0.08);
    border: 1px solid rgba(0, 255, 136, 0.25);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--accent);
    letter-spacing: 0.02em;
    margin-bottom: 1.5rem;
  }

  h1 {
    font-size: clamp(2.2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin-bottom: 1.25rem;
    color: var(--text-primary);
  }

  h1 .accent {
    display: block;
    background: linear-gradient(135deg, var(--accent) 0%, #00e077 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .lead {
    font-size: 1.15rem;
    color: var(--text-secondary);
    max-width: 520px;
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

  /* Button Actions */
  .hero__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 1.5rem;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.85rem 1.5rem;
    border-radius: 10px;
    font-weight: 600;
    font-size: 0.95rem;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
  }

  .btn-primary {
    background: var(--accent);
    color: #0a0a0a;
    border: none;
  }

  .btn-primary:hover {
    background: #00e077;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 255, 136, 0.3);
  }

  .btn-ghost {
    background: transparent;
    color: var(--text-primary);
    border: 1px solid var(--border);
  }

  .btn-ghost:hover {
    border-color: var(--accent);
    color: var(--accent);
  }

  /* Pills / Meta */
  .hero__meta {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-bottom: 1.5rem;
  }

  .pill {
    display: inline-flex;
    align-items: center;
    padding: 0.4rem 0.85rem;
    background: rgba(0, 255, 136, 0.08);
    border: 1px solid rgba(0, 255, 136, 0.2);
    border-radius: 999px;
    font-size: 0.8rem;
    color: var(--accent);
    font-weight: 500;
  }

  /* Right Panel */
  .hero__panel {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  @media (max-width: 1024px) {
    .hero__panel {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
  }

  /* Stat Cards - EXACT original styling */
  .stat-card {
    background: rgba(22, 27, 34, 0.8);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s ease;
  }

  .stat-card:hover {
    border-color: var(--accent);
    box-shadow: 0 0 20px rgba(0, 255, 136, 0.15);
    transform: translateY(-2px);
  }

  .stat-label {
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--accent);
    margin-bottom: 0.5rem;
  }

  .stat-footnote {
    font-size: 0.85rem;
    color: var(--text-secondary);
    line-height: 1.5;
    margin-bottom: 0.75rem;
  }

  .stat-link {
    font-size: 0.85rem;
    color: var(--accent);
    text-decoration: none;
    font-weight: 500;
    transition: opacity 0.2s ease;
  }

  .stat-link:hover {
    opacity: 0.8;
  }
</style>
