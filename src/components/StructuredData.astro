---
interface Props {
  type: 'Organization' | 'WebSite' | 'BlogPosting' | 'BreadcrumbList';
  data: Record<string, any>;
}

const { type, data } = Astro.props;

const baseSchema = {
  '@context': 'https://schema.org',
  '@type': type,
  ...data,
};
---

<script type="application/ld+json" set:html={JSON.stringify(baseSchema)} />
