---
/**
 * FAQAccordion Component - Pagayo Design System
 * 
 * Accessible accordion for FAQ sections with smooth animations.
 * 
 * @prop items - Array of FAQ items with question/answer
 * @prop title - Optional section title
 * @prop subtitle - Optional section subtitle
 * @prop variant - 'default' | 'bordered' | 'minimal' (default: 'default')
 * @prop allowMultiple - Allow multiple items open (default: false)
 */

import Icon from '../ui/Icon.astro';

interface FAQItem {
  question: string;
  answer: string;
}

interface Props {
  items: FAQItem[];
  title?: string;
  subtitle?: string;
  variant?: 'default' | 'bordered' | 'minimal';
  allowMultiple?: boolean;
  class?: string;
}

const {
  items,
  title,
  subtitle,
  variant = 'default',
  allowMultiple = false,
  class: className = '',
} = Astro.props;
---

<section class:list={['faq-section', className]}>
  {(title || subtitle) && (
    <div class="faq-header">
      {title && <h2 class="faq-title">{title}</h2>}
      {subtitle && <p class="faq-subtitle">{subtitle}</p>}
    </div>
  )}

  <div 
    class:list={['faq-accordion', `faq-${variant}`]}
    data-allow-multiple={allowMultiple}
  >
    {items.map((item, index) => (
      <div class="faq-item" data-index={index}>
        <button 
          class="faq-trigger"
          aria-expanded="false"
          aria-controls={`faq-content-${index}`}
          id={`faq-trigger-${index}`}
        >
          <span class="faq-question">{item.question}</span>
          <span class="faq-icon">
            <Icon name="chevron-down" size={20} />
          </span>
        </button>
        <div 
          class="faq-content"
          id={`faq-content-${index}`}
          role="region"
          aria-labelledby={`faq-trigger-${index}`}
          hidden
        >
          <div class="faq-answer">
            <p>{item.answer}</p>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  /* Section */
  .faq-section {
    padding: var(--space-20) var(--space-4);
  }

  @media (min-width: 768px) {
    .faq-section {
      padding: var(--space-24) var(--space-8);
    }
  }

  /* Header */
  .faq-header {
    text-align: center;
    max-width: 600px;
    margin: 0 auto var(--space-12);
  }

  .faq-title {
    font-size: var(--text-4xl);
    font-weight: 700;
    color: var(--color-text);
    margin-bottom: var(--space-4);
  }

  .faq-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-muted);
  }

  /* Accordion Container */
  .faq-accordion {
    max-width: var(--container-md);
    margin: 0 auto;
  }

  /* FAQ Item */
  .faq-item {
    border-bottom: 1px solid var(--color-border);
  }

  .faq-item:first-child {
    border-top: 1px solid var(--color-border);
  }

  /* Bordered Variant */
  .faq-bordered .faq-item {
    margin-bottom: var(--space-3);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .faq-bordered .faq-item:first-child {
    border-top: 1px solid var(--color-border);
  }

  .faq-bordered .faq-item[data-open="true"] {
    border-color: var(--color-accent);
    box-shadow: 0 0 0 1px var(--color-accent);
  }

  /* Minimal Variant */
  .faq-minimal .faq-item {
    border: none;
  }

  .faq-minimal .faq-item:first-child {
    border-top: none;
  }

  .faq-minimal .faq-trigger {
    padding-left: 0;
    padding-right: 0;
  }

  /* Trigger Button */
  .faq-trigger {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    padding: var(--space-5) var(--space-4);
    background: transparent;
    border: none;
    cursor: pointer;
    text-align: left;
    transition: background var(--transition-fast);
  }

  .faq-trigger:hover {
    background: var(--color-bg-secondary);
  }

  .faq-trigger:focus-visible {
    outline: 2px solid var(--color-accent);
    outline-offset: -2px;
  }

  .faq-bordered .faq-trigger {
    padding: var(--space-4) var(--space-5);
  }

  .faq-minimal .faq-trigger:hover {
    background: transparent;
  }

  .faq-question {
    font-size: var(--text-base);
    font-weight: 500;
    color: var(--color-text);
    line-height: 1.5;
  }

  .faq-icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    color: var(--color-text-muted);
    transition: transform var(--transition-base);
  }

  .faq-item[data-open="true"] .faq-icon {
    transform: rotate(180deg);
  }

  /* Content */
  .faq-content {
    overflow: hidden;
    transition: height 0.3s ease;
  }

  .faq-content[hidden] {
    display: block;
    height: 0;
    visibility: hidden;
  }

  .faq-answer {
    padding: 0 var(--space-4) var(--space-5);
  }

  .faq-bordered .faq-answer {
    padding: 0 var(--space-5) var(--space-5);
  }

  .faq-minimal .faq-answer {
    padding: 0 0 var(--space-5);
  }

  .faq-answer p {
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 0;
  }

  /* Animation for opening */
  .faq-item[data-open="true"] .faq-content {
    visibility: visible;
  }

  /* Dark Mode */
  [data-theme="dark"] .faq-trigger:hover {
    background: rgba(255, 255, 255, 0.03);
  }

  [data-theme="dark"] .faq-bordered .faq-item {
    background: var(--color-bg-secondary);
  }

  [data-theme="dark"] .faq-minimal .faq-trigger:hover {
    background: transparent;
  }
</style>

<script>
  class FAQAccordion {
    private accordion: HTMLElement;
    private items: NodeListOf<HTMLElement>;
    private allowMultiple: boolean;

    constructor(accordion: HTMLElement) {
      this.accordion = accordion;
      this.items = accordion.querySelectorAll('.faq-item');
      this.allowMultiple = accordion.dataset.allowMultiple === 'true';
      this.init();
    }

    private init(): void {
      this.items.forEach((item) => {
        const trigger = item.querySelector('.faq-trigger') as HTMLButtonElement;
        const content = item.querySelector('.faq-content') as HTMLElement;

        trigger?.addEventListener('click', () => this.toggle(item, content));
      });
    }

    private toggle(item: HTMLElement, content: HTMLElement): void {
      const isOpen = item.dataset.open === 'true';
      const trigger = item.querySelector('.faq-trigger') as HTMLButtonElement;

      if (!this.allowMultiple) {
        this.closeAll();
      }

      if (isOpen) {
        this.close(item, content, trigger);
      } else {
        this.open(item, content, trigger);
      }
    }

    private open(item: HTMLElement, content: HTMLElement, trigger: HTMLButtonElement): void {
      item.dataset.open = 'true';
      trigger.setAttribute('aria-expanded', 'true');
      content.hidden = false;
      
      // Animate height
      const height = content.scrollHeight;
      content.style.height = '0px';
      requestAnimationFrame(() => {
        content.style.height = `${height}px`;
      });
    }

    private close(item: HTMLElement, content: HTMLElement, trigger: HTMLButtonElement): void {
      item.dataset.open = 'false';
      trigger.setAttribute('aria-expanded', 'false');
      
      // Animate height
      content.style.height = `${content.scrollHeight}px`;
      requestAnimationFrame(() => {
        content.style.height = '0px';
        setTimeout(() => {
          content.hidden = true;
          content.style.height = '';
        }, 300);
      });
    }

    private closeAll(): void {
      this.items.forEach((item) => {
        const content = item.querySelector('.faq-content') as HTMLElement;
        const trigger = item.querySelector('.faq-trigger') as HTMLButtonElement;
        
        if (item.dataset.open === 'true') {
          this.close(item, content, trigger);
        }
      });
    }
  }

  // Initialize all accordions
  document.querySelectorAll('.faq-accordion').forEach((accordion) => {
    new FAQAccordion(accordion as HTMLElement);
  });
</script>
