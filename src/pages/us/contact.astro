---
import MarketingLayout from '../../layouts/MarketingLayout.astro';
import Button from '../../components/ui/Button.astro';
---

<MarketingLayout
  title="Contact - Pagayo Multi-Tenant SaaS Platform"
  description="Get in touch with our team. We're here to help with questions about our multi-tenant SaaS solution."
  lang="en"
>
  <!-- Hero Section -->
  <section class="container mx-auto px-6 py-20">
    <div class="max-w-3xl mx-auto text-center">
      <h1 class="text-5xl font-bold text-primary-dark mb-6">Get in touch</h1>
      <p class="text-xl text-gray-700 leading-relaxed">
        Questions about Pagayo? Our team is ready to help.
      </p>
    </div>
  </section>

  <!-- Contact Methods Grid -->
  <section class="container mx-auto px-6 pb-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      <!-- Email -->
      <div class="bg-white rounded-lg p-6 shadow-soft text-center">
        <div class="text-4xl mb-4">üìß</div>
        <h3 class="text-xl font-bold mb-2">Email</h3>
        <p class="text-gray-600 mb-4">Usually within 24 hours</p>
        <a
          href="mailto:hello@pagayo.com"
          class="text-primary-purple font-medium hover:underline"
        >
          hello@pagayo.com
        </a>
      </div>

      <!-- Phone -->
      <div class="bg-white rounded-lg p-6 shadow-soft text-center">
        <div class="text-4xl mb-4">üìû</div>
        <h3 class="text-xl font-bold mb-2">Phone</h3>
        <p class="text-gray-600 mb-4">Mon-Fri 09:00-17:00 CET</p>
        <a href="tel:+31205550123" class="text-primary-purple font-medium hover:underline">
          +31 20 555 0123
        </a>
      </div>

      <!-- Live Chat -->
      <div class="bg-white rounded-lg p-6 shadow-soft text-center">
        <div class="text-4xl mb-4">üí¨</div>
        <h3 class="text-xl font-bold mb-2">Live Chat</h3>
        <p class="text-gray-600 mb-4">Direct help via chat</p>
        <button class="text-primary-purple font-medium hover:underline" onclick="openChat()">
          Start chat
        </button>
      </div>
    </div>
  </section>

  <!-- Contact Form -->
  <section class="bg-gray-50 py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-2xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">Send us a message</h2>
        <form
          id="contact-form"
          class="bg-white rounded-lg shadow-soft p-8"
          action="https://app.pagayo.com/api/contact"
          method="POST"
        >
          <div class="mb-6">
            <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
              Name *
            </label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-purple focus:border-transparent"
              placeholder="Your name"
            />
          </div>

          <div class="mb-6">
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              Email *
            </label>
            <input
              type="email"
              id="email"
              name="email"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-purple focus:border-transparent"
              placeholder="your@email.com"
            />
          </div>

          <div class="mb-6">
            <label for="company" class="block text-sm font-medium text-gray-700 mb-2">
              Company
            </label>
            <input
              type="text"
              id="company"
              name="company"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-purple focus:border-transparent"
              placeholder="Your company (optional)"
            />
          </div>

          <div class="mb-6">
            <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
              Subject *
            </label>
            <select
              id="subject"
              name="subject"
              required
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-purple focus:border-transparent"
            >
              <option value="">Select a subject</option>
              <option value="sales">Sales & Pricing</option>
              <option value="demo">Request demo</option>
              <option value="technical">Technical question</option>
              <option value="support">Support</option>
              <option value="partnership">Partnership</option>
              <option value="other">Other</option>
            </select>
          </div>

          <div class="mb-6">
            <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
              Message *
            </label>
            <textarea
              id="message"
              name="message"
              required
              rows="6"
              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary-purple focus:border-transparent resize-none"
              placeholder="Tell us how we can help..."
            ></textarea>
          </div>

          <input type="hidden" name="language" value="en" />
          <input type="hidden" name="source" value="marketing_website" />

          <Button variant="primary" type="submit" class="w-full">
            Send message ‚Üí
          </Button>

          <p class="text-sm text-gray-600 text-center mt-4">
            By submitting this form you agree to our
            <a href="/us/privacy" class="text-primary-purple hover:underline">privacy policy</a>.
          </p>
        </form>

        <div id="form-success" class="hidden bg-green-50 border border-green-200 rounded-lg p-6 mt-6">
          <h3 class="text-green-800 font-bold mb-2">‚úì Message sent!</h3>
          <p class="text-green-700">
            Thanks for your message. We'll get back to you within 24 hours.
          </p>
        </div>

        <div id="form-error" class="hidden bg-red-50 border border-red-200 rounded-lg p-6 mt-6">
          <h3 class="text-red-800 font-bold mb-2">‚úó Something went wrong</h3>
          <p class="text-red-700">
            Please try again later or email us at hello@pagayo.com
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Location Info -->
  <section class="container mx-auto px-6 py-20">
    <div class="max-w-4xl mx-auto">
      <h2 class="text-3xl font-bold text-center mb-12">Our office</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
        <div>
          <h3 class="text-xl font-bold mb-4">üìç Amsterdam, Netherlands</h3>
          <p class="text-gray-700 mb-2">Pagayo B.V.</p>
          <p class="text-gray-700 mb-2">Herengracht 123</p>
          <p class="text-gray-700 mb-4">1015 BD Amsterdam</p>
          <p class="text-gray-700 mb-2">CoC: 12345678</p>
          <p class="text-gray-700">VAT: NL123456789B01</p>
        </div>
        <div class="bg-gray-200 rounded-lg h-64 flex items-center justify-center">
          <p class="text-gray-600">Google Maps placeholder</p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="bg-gray-50 py-20">
    <div class="container mx-auto px-6">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-center mb-12">Frequently asked questions</h2>
        <div class="space-y-6">
          <div class="bg-white rounded-lg p-6 shadow-soft">
            <h3 class="text-lg font-bold mb-2">How quickly will I get a response?</h3>
            <p class="text-gray-700">
              We aim to respond to all inquiries within 24 hours. For urgent matters, you can call
              us during business hours.
            </p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-soft">
            <h3 class="text-lg font-bold mb-2">Can I request a demo?</h3>
            <p class="text-gray-700">
              Yes! Select "Request demo" in the form and we'll schedule a personalized demo within
              2 business days.
            </p>
          </div>
          <div class="bg-white rounded-lg p-6 shadow-soft">
            <h3 class="text-lg font-bold mb-2">Do you offer support in English?</h3>
            <p class="text-gray-700">
              Absolutely. Our team speaks Dutch, English, and German. Support is available via
              email, chat, and phone.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
</MarketingLayout>

<script>
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMsg = document.getElementById('form-success');
  const errorMsg = document.getElementById('form-error');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);
    const data = Object.fromEntries(formData);

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(data),
      });

      if (response.ok) {
        form.classList.add('hidden');
        successMsg?.classList.remove('hidden');
        errorMsg?.classList.add('hidden');
      } else {
        throw new Error('Server error');
      }
    } catch (error) {
      errorMsg?.classList.remove('hidden');
      successMsg?.classList.add('hidden');
    }
  });

  function openChat() {
    alert('Live chat coming soon!');
  }
</script>
