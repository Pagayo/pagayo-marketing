---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import HeaderDynamic from '../../../components/HeaderDynamic.astro';
import FooterDynamic from '../../../components/FooterDynamic.astro';
import nlCountry from '../../../data/countries/nl.json';

const country = nlCountry;
---

<BaseLayout
    title="Exact integratie - Pagayo"
    description="Hoe Pagayo koppelt met Exact voor realtime boekhouding, btw-aangifte en reconciliatie van betalingen."
    lang="nl"
>
    <HeaderDynamic country={country} />

    <main class="page-container">
        <section class="hero-main">
            <div class="hero__content">
                <p class="eyebrow">Exact</p>
                <h1>Realtime koppeling met Exact</h1>
                <p class="lead">
                    Pagayo synchroniseert orders, betalingen en voorraad direct met Exact. Minder handwerk, minder fouten en altijd actuele cijfers.
                </p>
                <div class="hero__actions">
                    <a class="btn btn-primary" href="https://app.pagayo.com/register/">Start gratis</a>
                    <a class="btn btn-ghost" href="/eu/nl/contact">Plan een demo</a>
                </div>
                <div class="hero__meta">
                    <span class="pill">Automatische journaalposten</span>
                    <span class="pill">BTW-ready</span>
                    <span class="pill">Reconciliatie op orderniveau</span>
                </div>
            </div>

            <div class="hero__panel">
                <div class="stat-card">
                    <p class="stat-label">Realtime sync</p>
                    <p class="stat-value">< 5 min</p>
                    <p class="stat-footnote">Orders en betalingen</p>
                </div>
                <div class="stat-card">
                    <p class="stat-label">Foutenreductie</p>
                    <p class="stat-value">-90%</p>
                    <p class="stat-footnote">Automatisch boeken</p>
                </div>
                <div class="stat-card">
                    <p class="stat-label">Btw aangifte</p>
                    <p class="stat-value">Klaar</p>
                    <p class="stat-footnote">Per periode export</p>
                </div>
            </div>
        </section>

        <section class="section">
            <div class="section-header">
                <p class="eyebrow">Waarom Exact bij Pagayo</p>
                <h2 class="section-title">Boekhouding zonder handwerk</h2>
                <p class="section-subtitle">
                    We koppelen betalingen, orders, verzendkosten en refunds direct aan je grootboek. Minder exporteren, meer inzicht.
                </p>
            </div>

            <div class="feature-grid">
                <div class="feature-card">
                    <div class="feature-icon">üìö</div>
                    <h3>Journaalposten</h3>
                    <p>Automatisch boeken per order, inclusief btw, verzendkosten en kortingen.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">üîÑ</div>
                    <h3>Reconciliatie</h3>
                    <p>Betalingen uit Stripe/Mollie koppelen we aan orders. Geen losse spreadsheets meer.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">üßæ</div>
                    <h3>Facturatie</h3>
                    <p>Facturen en creditnota's automatisch doorgezet. Klantdata blijft in sync.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">üìä</div>
                    <h3>Rapportages</h3>
                    <p>Omzet, kosten en marges per kanaal direct zichtbaar in Exact dashboards.</p>
                </div>
            </div>
        </section>

        <section class="section section-alt">
            <div class="section-header">
