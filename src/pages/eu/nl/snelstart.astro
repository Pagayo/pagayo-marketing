---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import HeaderDynamic from '../../../components/HeaderDynamic.astro';
import FooterDynamic from '../../../components/FooterDynamic.astro';
import nlCountry from '../../../data/countries/nl.json';

const country = nlCountry;
---

<BaseLayout
    title="SnelStart integratie - Pagayo"
    description="Koppel Pagayo met SnelStart voor automatische boekingen, btw-verwerking en reconciliatie van betalingen."
    lang="nl"
>
    <HeaderDynamic country={country} />

    <main class="page-container">
        <section class="hero-main">
            <div class="hero__content">
                <p class="eyebrow">SnelStart</p>
                <h1>Automatisch boeken naar SnelStart</h1>
                <p class="lead">
                    Pagayo stuurt orders, betalingen en btw automatisch naar SnelStart. Geen exportbestanden, maar realtime inzicht.
                </p>
                <div class="hero__actions">
                    <a class="btn btn-primary" href="https://app.pagayo.com/register/">Start gratis</a>
                    <a class="btn btn-ghost" href="/eu/nl/contact">Plan een demo</a>
                </div>
                <div class="hero__meta">
                    <span class="pill">Automatische boekingen</span>
                    <span class="pill">BTW & grootboek mapping</span>
                    <span class="pill">Sync < 5 min</span>
                </div>
            </div>

            <div class="hero__panel">
                <div class="stat-card">
                    <p class="stat-label">Setup</p>
                    <p class="stat-value">1 dag</p>
                    <p class="stat-footnote">Volledig ingericht</p>
                </div>
                <div class="stat-card">
                    <p class="stat-label">Handwerk besparing</p>
                    <p class="stat-value">-8 uur/wk</p>
                    <p class="stat-footnote">Gemiddelde klant</p>
                </div>
                <div class="stat-card">
                    <p class="stat-label">Reconciliatie</p>
                    <p class="stat-value">Automatisch</p>
                    <p class="stat-footnote">Per betaalprovider</p>
                </div>
            </div>
        </section>

        <section class="section">
            <div class="section-header">
                <p class="eyebrow">Waarom SnelStart</p>
                <h2 class="section-title">Boekhouden zonder exports</h2>
                <p class="section-subtitle">
                    We sturen omzet, btw, verzendkosten en refunds direct door naar SnelStart. Minder fouten, sneller rapporteren.
                </p>
            </div>

            <div class="feature-grid">
                <div class="feature-card">
                    <div class="feature-icon">üìö</div>
                    <h3>Journaalposten</h3>
                    <p>Automatische posten per order, inclusief verzendkosten en kortingen.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">üîÑ</div>
                    <h3>Reconciliatie</h3>
                    <p>Stripe, Mollie en PayPal betalingen koppelen we direct aan je orders.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">üßæ</div>
                    <h3>Facturen</h3>
                    <p>Facturen en creditnota's synchroon, zodat klanten en btw kloppen.</p>
                </div>
                <div class="feature-card">
                    <div class="feature-icon">üìä</div>
                    <h3>Rapportages</h3>
                    <p>Omzet per kanaal en productgroep beschikbaar in SnelStart dashboards.</p>
                </div>
            </div>
        </section>

        <section class="section section-alt">
            <div class="section-header">
                <p class="eyebrow">Implementatie</p>
                <h2 class="section-title">In een middag live</h2>
                <p class="section-subtitle">
                    Verbind je SnelStart licentie, kies grootboekrekeningen en test direct met een paar orders.
                </p>
            </div>

            <div class="feature-grid feature-grid--three">
                <div class="feature-card">
                    <div class="feature-icon">1Ô∏è‚É£</div>
