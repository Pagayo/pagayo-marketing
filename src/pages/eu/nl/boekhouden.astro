    <style>
        .section { padding: 5rem 0; }
        .section-alt { background: linear-gradient(180deg, rgba(0, 255, 136, 0.04), rgba(0, 0, 0, 0.12)); }
        .section-header { max-width: 760px; margin: 0 auto 3rem; text-align: center; }
        .section-title { font-size: clamp(2rem, 4vw, 2.8rem); font-weight: 900; letter-spacing: -0.02em; margin-bottom: 0.8rem; }
        .section-subtitle { color: var(--text-secondary); line-height: 1.6; }
        .eyebrow { display: inline-flex; align-items: center; gap: 0.4rem; padding: 0.35rem 0.8rem; border: 1px solid var(--border); border-radius: 999px; font-size: 0.85rem; letter-spacing: 0.08em; text-transform: uppercase; color: var(--text-secondary); }
        .lead { color: var(--text-secondary); line-height: 1.6; max-width: 720px; }
        .btn { display: inline-flex; align-items: center; justify-content: center; gap: 0.6rem; padding: 0.9rem 1.5rem; border-radius: 10px; font-weight: 700; text-decoration: none; transition: all 0.25s ease; border: 1px solid transparent; cursor: pointer; }
        .btn-primary { background: linear-gradient(135deg, var(--accent) 0%, #00e077 100%); color: #06130d; box-shadow: 0 12px 30px rgba(0, 255, 136, 0.2); }
        .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 14px 36px rgba(0, 255, 136, 0.3); }
        .btn-ghost { border-color: var(--border); color: var(--text); background: rgba(10, 10, 10, 0.6); }
        .btn-ghost:hover { border-color: var(--accent); color: var(--accent); }
        .pill { display: inline-flex; align-items: center; gap: 0.35rem; padding: 0.35rem 0.75rem; border-radius: 999px; border: 1px solid var(--border); background: rgba(0, 255, 136, 0.05); color: var(--text); font-size: 0.85rem; }

        .feature-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); gap: 1.5rem; }
        .feature-grid--three { grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); }
        .feature-grid--two { grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); }
        .feature-card { border: 1px solid var(--border); border-radius: 16px; padding: 1.8rem; background: var(--bg-secondary); box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3); display: flex; flex-direction: column; gap: 0.65rem; transition: all 0.25s ease; }
        .feature-card:hover { border-color: var(--accent); transform: translateY(-4px); box-shadow: 0 16px 36px rgba(0, 255, 136, 0.14); }
        .feature-icon { width: 44px; height: 44px; display: grid; place-items: center; border-radius: 12px; background: rgba(0, 255, 136, 0.1); color: var(--accent); font-weight: 700; }
        .feature-card h3 { font-size: 1.2rem; font-weight: 800; margin: 0.25rem 0; }
        .feature-card p { color: var(--text-secondary); line-height: 1.6; }

        .cta { border: 1px solid var(--border); border-radius: 18px; padding: 3rem; background: linear-gradient(135deg, rgba(0, 255, 136, 0.06), rgba(0, 0, 0, 0.9)); box-shadow: 0 14px 40px rgba(0, 0, 0, 0.3); text-align: center; margin: 2rem 0 0; }
        .cta__content { display: flex; flex-direction: column; gap: 0.75rem; align-items: center; }
        .cta h2 { font-size: clamp(2.1rem, 4vw, 2.6rem); font-weight: 900; letter-spacing: -0.02em; }
        .cta p { color: var(--text-secondary); max-width: 640px; }
        .cta__actions { display: flex; gap: 0.75rem; flex-wrap: wrap; justify-content: center; margin-top: 0.5rem; }

        @media (max-width: 1024px) {
            .feature-grid { grid-template-columns: repeat(2, 1fr); }
            .feature-grid--two { grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); }
        }

        @media (max-width: 768px) {
            .section { padding: 4rem 0; }
            .section-header { margin-bottom: 2.5rem; }
            .feature-card { padding: 1.5rem; }
            .cta { padding: 2rem 1.5rem; border-radius: 16px; }
            .cta__actions { flex-direction: column; width: 100%; }
            .cta__actions .btn { width: 100%; }
        }

        @media (max-width: 480px) {
            .section { padding: 3rem 0; }
            .eyebrow { font-size: 0.75rem; padding: 0.3rem 0.7rem; }
            .lead { font-size: 0.95rem; }
            .btn { padding: 0.8rem 1.25rem; font-size: 0.9rem; }
            .pill { font-size: 0.75rem; padding: 0.3rem 0.6rem; }
            .feature-card { padding: 1.25rem; gap: 0.5rem; }
            .feature-icon { width: 38px; height: 38px; }
            .feature-card h3 { font-size: 1.1rem; }
            .feature-card p { font-size: 0.9rem; }
            .cta { padding: 1.75rem 1rem; }
            .cta h2 { font-size: 1.75rem; }
        }
    </style>

    <FooterDynamic country={country} />
</BaseLayout>
